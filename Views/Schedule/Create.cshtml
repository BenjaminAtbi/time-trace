@using time_trace.Components
@using System.Diagnostics
@using System.Text.Json
@model time_trace.Models.Schedule
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "New Schedule";
    var requestToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
    var postDateApi = @Url.Action(action: "Edit", controller: "Schedule");

}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-asp-antiforgery="true">
            <h4>Schedule a new Event</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
             <div class="form-group create-form-group">
                 <label asp-for="Name"></label>
                 <input asp-for="Name" class="form-control" />
                 <span asp-validation-for="Name" class="text-danger"></span>
             </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
