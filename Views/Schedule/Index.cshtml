@model IEnumerable<time_trace.Models.Schedule>

@{
    ViewData["Title"] = "Schedules";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Schedules
            </th>
            <th><a asp-action="Create">Create</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <form>
                        <button asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                    </form>
                </td>
                <td>
                    <form method="post">
                        <button asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
